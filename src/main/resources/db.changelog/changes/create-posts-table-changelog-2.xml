<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2" author="bovin">
        <createTable
                tableName="posts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="moderation_status" type="ENUM('NEW', 'ACCEPTED','DECILINED')" defaultValue="NEW">
                <constraints nullable="false"/>
            </column>
            <column name="moderator_id" type="int"/>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="view_count" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>